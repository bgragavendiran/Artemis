<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with rounded corners and border -->
    <item>
        <shape>
            <!-- Outer rounded background color -->
            <solid android:color="@color/electric_blue" />
            <corners android:radius="36dp" />
            <stroke
                android:width="2dp"
                android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Red square centered inside -->
    <item
        android:left="45dp"
        android:right="45dp"
        android:top="45dp"
        android:bottom="45dp">
        <shape>
            <solid android:color="@android:color/holo_red_dark" />
        </shape>
    </item>

</layer-list>
