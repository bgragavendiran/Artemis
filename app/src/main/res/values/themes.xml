        <!-- Navigation bar selected icon and background colors -->
        <item name="android:navigationBarColor">@color/gunmetal</item>
        <item name="colorControlActivated">@color/electric_blue</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/gunmetal</item>
        <item name="colorOnBackground">@color/gunmetal_2</item>
        <item name="colorOnSurface">@color/electric_blue</item>

        <!-- Error colors (optional) -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Customize text appearance -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/electric_blue</item>
    </style>
</resources>
